apiVersion: v1
kind: Service
metadata:
  name: springboot
  labels:
    app: springboot
spec:
  ports:
  - port: 8080
    name: http
  selector:
    app: springboot
  type: NodePort
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: springboot
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: springboot
        commit: ${WERCKER_GIT_COMMIT}
    spec:
      containers:
      - name: springboot
        image: ${DOCKER_REPOSITORY}:${WERCKER_GIT_COMMIT}
        imagePullPolicy: Always
        ports:
        - containerPort: 8080
